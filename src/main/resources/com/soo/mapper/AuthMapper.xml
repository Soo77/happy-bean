<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soo.dao.AuthDao">

    <resultMap type="Member" id="MemberMap">
        <id column="member_no" property="no"/>
        <result column="member_type_cd" property="memberTypeCode"/>
        <result column="profile_photo" property="photo"/>
        <result column="rdt" property="registeredDate"/>
    </resultMap>

    <sql id="basicColumn">
        select
        member_no,
        id,
        name,
        password,
        email,
        member_type_cd,
        profile_photo,
        rdt,
        money
    </sql>

    <select id="duplicateIdCheck" parameterType="String" resultType="boolean">
       select if(count(*) > 0, 'true', 'false')
       from member where id = #{id, jdbcType=VARCHAR}
    </select>

    <select id="findByIdPw" parameterType="map" resultMap="MemberMap">
        <include refid="basicColumn"/>
        from member
        where id=#{id} and password=password(#{password})
        or id=#{id} and password=#{password}
    </select>


</mapper>